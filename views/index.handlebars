<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Eat-Da-Donut!</h1>
    </div>
  </div>
</div>


<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h3>Not Eaten:</h3>
        {{#each donuts}}
          {{#unless this.devoured}}
            <div>
              <form action="/donuts/{{this.id}}" method="POST">
                <button type="submit" class='donutAvailable'> {{this.donut_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col-md-6">
        <h3>Eaten:</h3>
        {{#each donuts}}
          {{#if this.devoured}}
            <div class='donutEaten'>
              <div>
                {{this.donut_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>



<div class="container mt-2">
  <div class="row">
    <div class="col-md-12">
      <h2>Add A Donut Option</h2>
    </div>
  </div>
</div>

<div class="container">
<div class="row">
  <div class="col-md-12">
    <form action="/donuts" method="POST">
      <input type="text" id="name" name="donut_name" placeholder="Uber Delicious Donut">
      <button type="submit" class="addDonutButton">Add The Donut</button>
    </form>
  </div>
</div>

</div>